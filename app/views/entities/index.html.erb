<header class="fixed top-0 w-full">
  <nav  class="  bg-gradient-to-r from-blue-600 to-blue-900 overflow-hidden flex justify-between items-center w-full p-2 py-4 text-white">
    <%= link_to image_tag('back.svg', alt: 'Back'), categories_path %>
    <h1 class="font-light text-xl uppercase">Transactions</h1>
    <%= button_to destroy_user_session_path, method: :delete,class:"w-6 h-6 m-0 p-0" ,data: { turbo: false } do %>
      <%= image_tag 'logout.svg', alt: 'Log Out',class:"w-6 h-6 m-0 pt-1"%>
    <% end %>
  </nav>
  <div class="flex justify-between items-center bg-white flex-wrap w-full py-4 px-2 border-b-2 border-gray-400 shadow-md">
  <p class="font-light">Total Expenses:</p>
  <p class="font-bold text-black">$ <%=@total_amount%></p>
</div>
</header>
<section class="flex flex-col m-auto p-4 gap-4 bg-[#F0F2F1] py-32 mt-2">
  <%@category_entities.each do |category_entity|%>
    <article class="flex flex-col bg-white  m-auto p-2 gap-2 justify-between w-full" >
      <div class="flex flex-col w-full">
        <h3 class="font-bold text-xl text-black" >Transaction NÂº <%= category_entity.id %></h3>
        <div class="flex w-full justify-between items-center">
          <p class="text-xl"><%= category_entity.entity.name %></p>
          <p class="text-xl font-bold text-black">$ <%= category_entity.entity.amount %></p>
        </div>
        <p class="font-light"><%= category_entity.entity.created_at.strftime('%d %b %Y %H:%M') %></p>
      </div>
    </article>
  <%end%>
</section>
<div class="fixed bottom-0 w-full items-center justify-center bg-[#5fb523] p-4 border-t-2 border-gray-400 shadow-md">
  <%= link_to "New Transaction", new_category_entity_path(@category), class:"block w-full p-4 text-center uppercase bg-transparent border-2 border-white text-white" %>
  </div>

